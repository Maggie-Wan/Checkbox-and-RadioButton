<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.app3.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#000b9c"
            android:text="商品/加購金額計算" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="尺" />

        <EditText
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#0112fa"
            android:textSize="25sp"
            android:text="" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="筆" />

        <EditText
            android:id="@+id/y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#0112fa"
            android:textSize="25sp"
            android:text="" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fa0101"
            android:textSize="20sp"
            android:text="加購商品" />

        <CheckBox
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#36a308"
            android:textSize="20sp"
            android:text="紙(3份30元)" />

        <CheckBox
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#36a308"
            android:textSize="20sp"
            android:text="圓規(3支60元)" />

        <CheckBox
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#36a308"
            android:textSize="20sp"
            android:text="筆記本(3本60元)" />

        <Button
            android:id="@+id/cal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cal"
            android:text="計算"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#871601"
            android:textSize="25sp"
            android:text=""
            android:layout_weight="0.82" />

        <Button
            android:id="@+id/btnP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnP2"
            android:textSize="25sp"
            android:text="往下一頁" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
